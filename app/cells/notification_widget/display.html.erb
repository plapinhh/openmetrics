<% flash.each do |type, msg| %>
  <script type="text/javascript"> 
    $(document).ready(function() {
      $('#in-notification-widget').jnotifyAddMessage({
        text: '<%= msg %>',
      <% if type.to_s.include? "error" %>
          permanent: true,
          type: 'error'
        <% else %>
          <%# jnotfiy just knows error and notice by default... TODO extend to hint and sussess! %>
          permanent: false
        <% end %>
      });
    });
  </script>
<% end %>
