  </p>
  <p>
		<%= f.label :minimum_contract_running_date %><br />
    <%= f.date_select :minimum_contract_running_date %>
  </p>
  <p>
		<%= f.label :initial_cost %><br />
    <%= f.text_field :initial_cost %>
  </p>
  <p>
		<%= f.label :monthly_cost %><br />
    <%= f.text_field :monthly_cost %>
  </p>
  <p>
		<%= f.label :inv_id_parship %><br />
    <%= f.text_field :inv_id_parship %>
  </p>
  <p>
		<%= f.label :inv_id_provider %><br />
    <%= f.text_field :inv_id_provider %>
  </p>
  <p>
		<%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
