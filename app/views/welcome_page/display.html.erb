<script type="text/javascript">
  $j(document).ready(function($) {
    // move searchbar out of header
    $j('#searchbox').children().appendTo('#container_for_search_input');

    // place search box
    $j("#box").position({ my: "center", at: "center", of: window });
     <%#*ignore the height of top toolbar; this will make sure%> 
     <%#*there is no "box jumping" after a users login on session/new page%>
    $j("#box").offset({ top: 100 });

    //
    $j("#search").focus();
  });
</script>

