<h1>New alert</h1>

<% form_for(@alert) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :system_id %><br />
    <%= f.text_field :system_id %>
  </p>
  <p>
    <%= f.label :severity %><br />
    <%= f.text_field :severity %>
  </p>
  <p>
    <%= f.label :metric_identifier %><br />
    <%= f.text_field :metric_identifier %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :warning_min %><br />
    <%= f.text_field :warning_min %>
  </p>
  <p>
    <%= f.label :warning_max %><br />
    <%= f.text_field :warning_max %>
  </p>
  <p>
    <%= f.label :failure_min %><br />
    <%= f.text_field :failure_min %>
  </p>
  <p>
    <%= f.label :failure_max %><br />
    <%= f.text_field :failure_max %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', alerts_path %>